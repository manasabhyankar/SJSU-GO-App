<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/go_logo"
            android:id="@+id/go_logo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            app:layout_constraintHorizontal_bias="0.493" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/sjsu_id"/>
    <Button
            android:text="@string/login_text"
            android:layout_width="273dp"
            android:layout_height="42dp"
            android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="196dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@color/button_color"
            tools:text="@string/login_text"
            android:textColor="@color/button_text_color"
    />
    <TextView
            android:text="@string/signup_redirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_redirect" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.01"
    />
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="187dp"
            android:layout_height="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/sjsu_id"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/sjsu_pass">

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:layout_editor_absoluteY="281dp"
                tools:layout_editor_absoluteX="112dp">
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sjsu_id"/>
    </com.google.android.material.textfield.TextInputLayout>
    <EditText
            android:layout_width="187dp"
            android:layout_height="55dp"
            android:inputType="textPassword"
            android:hint="@string/sjsu_pass"
            android:ems="10"
            android:id="@+id/sjsu_pass" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>